<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/titulotext"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="@string/TitleSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
    </TextView>

        <TextView
            android:id="@+id/titulo"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="John"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/descricaotext"
            android:padding="10dp"
            >
        </TextView>


    <TextView
        android:id="@+id/descricaotext"
        android:textStyle="bold"
        android:text="@string/DescriptionSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/titulotext"
        >
    </TextView>

        <TextView
            android:id="@+id/descricao"
            android:text="THIS IS A TEST DESCRIPTION IT WONT ACTUALLY SHOW UP ON THE MOBILE DEVICE IT IS MERELLY USED FOR TESTING PURPOSES"
            android:layout_below="@id/titulotext"
            android:layout_toRightOf="@id/descricaotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
        </TextView>

    <View
        android:id="@+id/barrier2"
        android:layout_below="@id/descricao"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    </RelativeLayout>
